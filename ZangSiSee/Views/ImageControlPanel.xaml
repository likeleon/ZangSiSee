<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ZangSiSee.Views.ImageControlPanel">
  <StackLayout Padding="10">
    <StackLayout Orientation="Horizontal">
      <Slider HorizontalOptions="FillAndExpand"
              Maximum="{Binding MaxPageNumber}"
              Minimum="0"
              Value="{Binding PageNumber}" />
      <Label Text="{Binding PageNumber}" />
      <Label Text="{Binding MaxPageNumber, StringFormat='/ \{0\}'}" />
    </StackLayout>
  </StackLayout>
</ContentView>